{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "pip install -r req.txt",
      "rootDirectory": "."
    },
    "deploy": {
      "startCommand": "uvicorn index:app --host 0.0.0.0 --port $PORT",
      "healthcheckPath": "/test",
      "restartPolicy": {
        "onFailure": "ALWAYS",
        "maxRetries": 3
      }
    }
  }
  